{% extends "./app.twig" %}

{% block page %}
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <b>User Profile</b>
            </div>
            <div class="panel-body">
                <form action="{{ path_for("user.profile") }}" method="post" class="form-horizontal">
                    <div class="form-group{{ errors.first_name ? ' has error' : '' }}">
                        <label for="first_name" class="col-sm-2 control-label">First name: </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="first_name" name="first_name" value="{{ profile.first_name }}" data-validate="required">
                            {% if errors.first_name %}
                                <span class="help-block">{{ errors.first_name| first }}</span>
                            {%  endif %}
                        </div>
                    </div>
                    <div class="form-group {{ errors.last_name ? ' has error' : '' }}">
                        <label for="last_name" class="col-sm-2 control-label">Last name: </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="last_name" name="last_name" value="{{ profile.last_name }}" data-validate="required">
                            {% if errors.last_name %}
                                <span class="help-block">{{ errors.last_name | first }}</span>
                            {%  endif %}
                        </div>
                    </div>
                    <div class="form-group {{ errors.email ? ' has error' : '' }}">
                        <label for="email" class="col-sm-2 control-label">E-mail: </label>
                        <div class="col-sm-6">
                            <input type="email" class="form-control" id="email" name="email" value="{{ profile.email }}" data-validate="required">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {%  endif %}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary"><strong>Update data</strong></button>
                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}